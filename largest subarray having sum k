
let arr=[1,2,3,5,6,7,4,2]
k=6

function long(arr,k){
    let i=0
    let j=0
    let sum=0
    max=-Infinity
        while(j<arr.length){
        sum+=arr[j]
        if(sum<k){
            j++
        }else if(sum==k){
            max=Math.max(max,j-i+1)
            j++
        }else if(sum>k){
            while(sum>k){
                sum-=arr[i]
                i++
            }
            j++
        }
    }
    return max

}

let a=long(arr,k)
console.log(a)